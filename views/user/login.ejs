<%- include('../partials/header.ejs') %>
<section class="vh-100 bg-dark" >
  <div class="container py-5 h-100 ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block  ">
              <img src="https://wallpaperaccess.com/full/4893666.jpg"
                alt="login form" class="img-fluid bg-dark" style="border-radius: 1rem 0 0 1rem; height: 580px; " />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form method="post" action="/userlogin" id="form"  class="form-group"> 

                 

                  <h5 class="fw-normal mb-3 pb-3 text-dark font-weight-bold" style="letter-spacing: 1px;">Login</h5>

                  <div class="form-outline mb-4">
                     <label class="form-label" for="form2Example17">Email </label>
                    <input type="email" id="Email" name="email" class="form-control form-control-lg" required  >
                    <!-- <span id="usernameError" class="text-danger" ></span> -->
                   
                    
                  </div>

                  <div class="form-outline mb-4">
                        <label class="form-label" for="form2Example27">Password</label >
                    <input type="password" id="Password" name="password" class="form-control form-control-lg" required  />
                
                  </div>
                  <div class="mt-2">
                    <% if(locals.error){%>
                      <p class="text-danger font-weight-bold"><%=error%></p>
                      <%}%>
                   

                  </div>

                  <div class="pt-1 mb-4">
                    
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                  </div><hr>

                  <!-- <a class="small text-muted" href="#!">Forgot password?</a> -->
                  <small class="mb-5 pb-lg-2 " style="color: #393f81;">Don't have an account? <a href="/signup"
                      style="color: #03109b;"><small class="text-danger font-weight-bold">Register here</small></a></small>
                      <div>
                        <a href="#!" class="small text-muted">Terms of use.</a>
                  <a href="#!" class="small text-muted">Privacy policy</a>

                      </div>
                  
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
    
 <%- include('../partials/footer.ejs') %>     
   
    
